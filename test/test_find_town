from app.app import find_town
import pandas as pd 
import pytest 

def test_find_town():
        df = pd.DataFrame({
            'nom_commune_postal': ['ANGLEFORT', 'BRESSOLLES', 'VARAMBON'],
            'latitude': [1.0, 2.0, 3.0],
            'longitude': [4.0, 5.0, 6.0]
        })

        result = find_town(df, 'BRESSOLLES')
        assert(result.iloc[0]['latitude'], 2.0)
        assert(result.iloc[0]['longitude'], 5.0)